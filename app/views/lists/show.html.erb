<%= @list.name%>
<%= link_to "Add bookmark", new_list_bookmark_path(@list)%>
<br>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li> <%=bookmark.comment %>
    <%= bookmark.movie.title %>
    <img source=<%=bookmark.movie.poster_url %>, width: 200%>
    <%= bookmark.movie.overview %>
    <%= bookmark.movie.rating  %>  /10
    <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" }%>
    </li>
  <% end %>
</ul>


<br>
<%= link_to "Back to Lists", lists_path %>
